pipeline{
		agent any
		stages {
			stage('git checkout') {
				steps{
					git 'https://github.com/afridi786/maven-project.git'
				}
			}
			stage('build code') {
				steps {
					withMaven(jdk: 'LOCAL_JDK', maven: 'LOCAL_MAVEN') { 
						sh 'mvn install'
					}
				}
			} 
			stage('deploy to tomcat') {
				steps {
					sshagent(['NewTomcatForMaven']) {
   					sh 'ssh -o StrictHostKeyChecking=no */target/*.war ec2-user@3.17.60.253:/var/lib/tomcat/webapps'
						}
				}
			} 
		}
	} 
